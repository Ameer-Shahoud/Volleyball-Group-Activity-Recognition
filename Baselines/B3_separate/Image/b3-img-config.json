{
    "id": "B3_separate",
    "description": "This Baseline finetuned ResNet50 to classify the whole image or frame according to each player class bla bla bla...",
    "output_dir": "B3",
    "is_joint": false,
    "is_temporal": false,
    "dataset": {
        "past_frames_count": 2,
        "post_frames_count": 2,
        "preprocess": {
            "transforms": [
                {
                    "type": "resize",
                    "args": {
                        "width": 224,
                        "height": 224
                    }
                },
                {
                    "type": "to_tensor",
                    "args": null
                },
                {
                    "type": "normalize",
                    "args": {
                        "mean": [
                            0.485,
                            0.456,
                            0.406
                        ],
                        "std": [
                            0.229,
                            0.224,
                            0.225
                        ]
                    }
                }
            ]
        }
    },
    "training": {
        "epochs": 30,
        "batch_size": 64,
        "learning_rate": 0.001,
        "early_stopping": {
            "metric": "f1",
            "patience": 3,
            "delta": 0,
            "mode": "max"
        },
        "scheduler": {
            "patience": 3,
            "factor": 0.1,
            "mode": "min"
        }
    }
}